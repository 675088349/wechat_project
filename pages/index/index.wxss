
.search {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding-left: 26rpx;
  background-color: white;
}

.search-title {
  left: 0;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-input {
  position: relative;
  left: 20rpx;
  background: #F7F8FA;
  border-radius: 10rpx ;
  padding-left: 0rpx;
  box-sizing: border-box;
  line-height: 62rpx;
  font-size: 12px;
  display: block;
}

.search-placeholder {
  font-size: 14px;
  color: #A9A6A6;
  line-height: 62rpx;
  padding-left: 20rpx;
}

.swiper-container {
  width: 750rpx;
  height: 375rpx;
  z-index: 1;
  position: relative;
}

.banner-swiper {
  width: 100%;
  height: 375rpx;
}

.banner-item {
  width: 100%;
  height: 100%;
}

.banner-item-img {
  width: 100%;
  height: 100%;
}

.bottom-swiper-bg {
  bottom: 46rpx;
  position: absolute;
  width: 668rpx;
  height: 40rpx;
  left: 24rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
}

.bottom-swiper {
  width: 100%;
  height: 34rpx;
}

.bottom-swiper-item {
  width: 100%;
  display: flex;
  height: 34rpx;
  align-items: center;
  padding: 0rpx 20rpx;
}

.bottom-avator {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.bottom-des {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin-left: 20rpx;
  font-size:small;
}

.category-container {
  background-color: white;
  width: 100%;
  position: relative;
}

.category-box {
  margin: 20rpx 30rpx 20rpx 30rpx;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  border-radius: 10px;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx 40rpx 20rpx;
  position: block;
}

.category-column {
  width: 130rpx;
  display: inline-block;
  text-align: center;
  overflow: hidden;
  margin-top: 30rpx;
}

.category-column image {
  width: 100rpx;
  height: 100rpx;
}

.category-column view {
  font-size: 24rpx;
  text-align: center;
}

.notice-box {
  background-color: white;
  width: 100%;
  height: 78rpx;
  position: relative;
}

.notice_swiper {
  color: red;
  height: 78rpx;
  position: relative;
}

.notice_swiper swiper-item {
  position: relative;
  height: 100%;
}

.notice_swiper swiper-item text {
  font-size: 30rpx;
  padding-left: 40rpx;
  margin-top: 20rpx;
  height: 78rpx;
  display: block;
}

.container-bottom {
  margin-top: 30rpx;
  position: relative;
}

.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 0 24rpx;
  /* padding-left: 20rpx; */
  background-color: white;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.goods-box {
  width: 339rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius: 5px;
  border: 1px solid #D1D1D1;
  padding-bottom: 10rpx;
}

.image {
  width: 339rpx;
  height: 339rpx;
}

.goods-title {
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
}

.goods-price {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: red;
}

.kanjia-container {
  margin-top: 30rpx;
  background-color: white;
  padding: 30rpx 0 20rpx;
}

.kanjia-box {
  display: flex;
  position: relative;
  padding: 20rpx 0;
}

.img-box {
  width: 180rpx;
  height: 180rpx;
  margin-left: 30rpx;
}

.goods-image-kanjia {
  width: 180rpx;
  height: 180rpx;
}

.right-bg {
  padding: 0 10rpx;
  /*  flex-wrap: wrap; */
  display: flex;
  flex: 1;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goods-title {
  font-size: 29rpx;
  text-align: left;
  word-wrap: break-word;
  padding: 0;
}

.goods-des {
  font-size: 25rpx;
  word-wrap: break-word;
}

.kanjia-press {
  height: 10rpx;
  width: 100%;
  background-color: red;
}

.kanjia-price {
  display: flex;
  align-items:flex-end;
}

.price-min {
  color: red;
  font-size: 30rpx;
}

.price-max {
  font-size: 25rpx;
  margin-left: 20rpx;
}
