.search {
  display: flex;
  background-color: white;
  box-sizing: border-box;
  position: relative;
  padding-left: 26rpx;
  width: 100%;
  z-index: 10;
}

.search-title {
  left: 0;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-input {
  position: relative;
  left: 20rpx;
  background: #F7F8FA;
  border-radius: 10rpx ;
  padding-left: 0rpx;
  box-sizing: border-box;
  line-height: 62rpx;
  font-size: 12px;
  display: block;
}

.search-placeholder {
  font-size: 14px;
  color: #A9A6A6;
  line-height: 62rpx;
  padding-left: 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 400rpx;
}

.banner-item {
  width: 100%;
  height: 100%;
  background-color: red;
}